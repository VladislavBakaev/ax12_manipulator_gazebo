<launch>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find angle_ax12_model_pkg)/worlds/world.world"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find angle_ax12_model_pkg)/urdf/angle_robot_ax12.urdf.xacro'"/>
   
    <rosparam command="load" file="$(find angle_ax12_model_pkg)/config/arm_control.yaml" />
    <rosparam command="load" file="$(find angle_ax12_model_pkg)/config/gripper_control.yaml" />
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager"
        args="spawn angle_ax12_controller  gripper_position gripper_sub_position" respawn="false" output="screen"/>

    <rosparam command="load" file="$(find angle_ax12_model_pkg)/config/joint_state_controller.yaml" />
    <node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" respawn="false" output="screen"/>

    <node name="angle_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-urdf -param robot_description -model angle_robot" />
    
    <node name="robot_state_publisher_angle_ax12" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <!-- <remap from="/joint_states" to="/angle_robot_ax12/joint_states" /> -->
    </node>
</launch>